<header>
  <nav>
    <% if logged_in? %>
      <li><a href="#">Protected Page</a></li>
      <li><a href="/logout">Sign out</a></li>
      <li>Welcome, <%= current_user.name %></li>
    <% else %>
      <li><a href="/signup">Sign Up</a></li>
      <li><a href="/login">Sign In</a></li>
    <% end %>
  </nav>
</header>

<body>
  <%= yield %>
</body>

</html>
